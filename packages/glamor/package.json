{
  "name": "glamor",
  "version": "3.0.0-1",
  "description": "inline css for component systems",
  "main": "lib/index.js",
  "typings": "index.d.ts",
  "files": [
    "es6",
    "lib",
    "umd",
    "index.d.ts"
  ],
  "scripts": {
    "example": "lerna exec --scope glamor-example npm run start",
    "clean": "rimraf lib es6 umd",
    "build": "npm-run-all -s clean -p build:** -s size",
    "build:lib": "babel src -d lib --presets es2015,stage-0,react",
    "build:es6": "babel src -d es6",
    "build:umd": "mkdirp umd && npm-run webpack --config ../../webpack/umd.js",
    "build:umd-prod": "cross-env NODE_ENV=production npm run build:umd",
    "size": "cat umd/index.min.js | gzip | wc -c",
    "test": "karma start ../../karma.conf.js",
    "test:watch": "npm test -- --no-single-run",
    "coverage": "rm -rf tests/coverage && COVERAGE=1 test && open tests/coverage/*/index.html",
    "prepublish": "npm run build"
  },
  "author": "Sunil Pai <threepointone@gmail.com>",
  "homepage": "https://github.com/threepointone/glamor",
  "license": "MIT",
  "repository": "https://github.com/threepointone/glamor",
  "keywords": [
    "css",
    "inline"
  ],
  "eslintConfig": {
    "extends": [
      "rackt"
    ],
    "plugins": [
      "react"
    ],
    "rules": {
      "react/jsx-uses-vars": "error",
      "react/jsx-uses-react": "error",
      "jsx-quotes": 0
    }
  },
  "dependencies": {
    "babel-runtime": "^6.18.0",
    "fbjs": "^0.8.8",
    "object-assign": "^4.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "cross-env": "^4.0.0",
    "expect": "^1.20.2",
    "expect-jsx": "^2.6.0",
    "karma": "^1.7.0",
    "lerna": "2.0.0-beta.37",
    "mkdirp": "^0.5.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "rimraf": "^2.6.1",
    "webpack": "2.1.0-beta.25"
  }
}
